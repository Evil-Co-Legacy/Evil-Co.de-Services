<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config SYSTEM "http://www.evil-co.de/irc/DTDs/config.dtd">
<config>
	<connection>
		<!-- 
			[REQUIRED]] Services name
			This will used to identify at IRCd
		 -->
		<name>test.antaresirc.de</name>
		
		<!-- 
			[REQUIRED] Hostname
			The hostname where the IRCd runs
		 -->
		<hostname>antaresirc.de</hostname>
		
		<!-- 
			[REQUIRED] Port
			The port where services should connect
		 -->
		<port>7000</port>
		
		<!-- 
			[REQUIRED] Password
			The password for link connection
		 -->
		<password>foobar</password>
		
		<!--
			[REQUIRED] Numeric
			The numeric for services
			If you don't know what this is leave it at default!
		 -->
		 <numeric>00B</numeric>
		 
		 <!-- 
	 		[REQUIRED] Cycle Message
	 		Defines cycle messages that should send to users if services connect to network
	 	 -->
	 	 <cyclemessage>
	 	 	<!-- 
	 	 		This message will appear on successfull startup
	 	 	 -->
	 	 	 <startup><![CDATA[Services are now back online! Have a nice day!]]></startup>
	 	 	 
	 	 	 <!-- 
	 	 	 	This message will appear on shutdown
	 	 	  -->
	 	 	  <shutdown><![CDATA[Services will be back soon!]]></shutdown>
	 	 	  
	 	 	  <!-- 
	 	 	  	This message will appear on errors (Leave it blank or comment out to disable)
	 	 	  	Note: This does not work now ...
	 	 	   -->
	 	 	   <error><![CDATA[Sorry but an error is occoured! We have to shutdown our services!]]></error>
	 	 </cyclemessage>
	 	 
	 	 <!-- 
	 	 	[REQUIRED] Logchan
	 	 	The channel where services should announce log messages
	 	  -->
	 	 <servicechannel><![CDATA[#Services]]></servicechannel>
	</connection>
	
	<!-- 
		[OPTIONAL] Memcache
		If you've installed the memcache extension you can use it for service caching. 
		Note: This is experimental!
	 -->
	<memcache>
		<servers>
			<!-- 
				Defines one server
				Note: You can have more than one server argument
			
			<server> -->
				<!--
					Address for server (Default: 127.0.0.1)
				
				<address>127.0.0.1</address> -->
				
				<!-- 
					Port of memcached (Default: 11211)
					Note: You can leave this empty.
				 
				<port>11211</port> -->
			<!-- </server> -->
		</servers>
	</memcache>
	
	<modules>
		<!-- 
			[REQUIRED] Safe Mode
			If this is enabled modules will run in safe mode
		 -->
		<safe_mode>0</safe_mode>
		
		<!-- 
			[REQUIRED] Allow URL fopen()
			If this is disabled modules aren't able to access urls via fopen()
		 -->
		<allow_url_fopen>1</allow_url_fopen>
		
		<!-- 
			[REQUIRED] Disabled Functions
			All listed functions aren't available in modules
		 -->
		<disable_functions>exec,shell_exec,passthru,system</disable_functions>
	</modules>
	
	<database>
		<!-- 
			[REQUIRED] Database Driver
			The driver that should used
			Available are: MySQL
		 -->
		<driver>MySQL</driver>
		
		<!-- 
			[REQUIRED] Database Hostname
			The hostname where Database (e.g. MySQL) runs.
		 -->
		<hostname>localhost</hostname>
		
		<!-- 
			[REQUIRED) Database Username
			The username that should used for database connection (e.g. root)
		 -->
		<username>root</username>
		
		<!-- 
			[REQUIRED) Database Password
			The password of user that should used for database connection
		 -->
		<password></password>
		
		<!-- 
			[REQUIRED] Database Name
			The name of database that contains service data layout
		 -->
		<dbname>evilcode_services</dbname>
	</database>
	
	<user>
		<!-- 
			[REQUIRED] Default Language
			The ID of the language that should used by default
			All languageIDs are located in 'language'-Table in your database
		 -->
		<language>1</language>
	</user>
	
	<!-- 
		[OPTIONAL] NickServ
		All options in this block are optional!
		Note that these options are only usefull if you've loaded the NickServ-Module (Loaded by default)
	 -->
	<nickserv>
		<!-- 
			[OPTIONAL] Allow Registrations
			If this is set to 1 the NickServ Module allows account registrations
		 -->
		<enableregistration>1</enableregistration>
		
		<!-- 
			[OPTIONAL] Require Email
			If this is set to 1 NickServ will require the E-Mail field for new accounts
			Note: This is only usefull if you enable the 'enablregistration' option!
		 -->
		<requireemail>1</requireemail>
		
		<!-- 
			[OPTIONAL] Use Emails
			If this is set to 1 NickServ will send E-Mails to users to validate Accounts
			Note: This REQUIRES the 'requireemail' option!
		 -->
		<usemail>1</usemail>
		
		<!-- 
			[OPTIONAL] Allow Nickregistrations
			If this is set to 1 NickServ will allow users to register nicknames (Protect them)
		 -->
		<allownickregistration>1</allownickregistration>
		
		<!-- 
			[OPTIONAL] Nickregistration Maximum
			Defines the maximum of registrated nicknames in one user account
			Note: This will only used if the 'allownickregistration' option is set to 1
		 -->
		<nickregistrationmax>5</nickregistrationmax>
		
		<!-- 
			[OPTIONAL] Accountname Pattern
			Defines a regex for account name validation.
			If you don't know what this does leave it at default!
			Note: This will only used if the 'enableregistration' setting is set to 1
		 -->
		<usernamepattern><![CDATA[~([A-Z0-9_\-\.]+)~i]]></usernamepattern>
	</nickserv>
	
	<!-- 
		[OPTIONAL] NickServ
		All options in this block are optional!
		Note that these options are only usefull if you've loaded the ChanServ-Module (Loaded by default)
	 -->
	<chanserv>
		<!-- 
			[OPTIONAL] Require Account
			If this is set to 1 ChanServ will deny all users access that aren't authed
		 -->
		<requireaccount>0</requireaccount>
		
		<!-- 
			[OPTIONAL] Require Account for Channel Registrations
			If this is set to 1 ChanServ will deny all users access to registration command that aren't authed
		 -->
		 <requireaccountregistration>1</requireaccountregistration>
		 
		 <!-- 
		 	[OPTIONAL] Required Operator Level for Channel Registrations
		 	The given integer defines the minimum operator level for channel registrations
		  -->
		  <requiredregistrationaccountlevel>200</requiredregistrationaccountlevel>
		 
		 <!-- 
		 	[OPTIONAL] Channel Name Pattern
		 	Defines a regex for channel names
		 	If you don't know what this does leave it at default!
		  -->
		 <channelnamepattern><![CDATA[~(#|&)([#&A-Z0-9_\-\.]*)~i]]></channelnamepattern>
	</chanserv>
	
	<!-- 
		[OPTIONAL] OpServ
		All options in this block are optional!
		Note that these options are only usefull if you've loaded the OpServ-Module (Loaded by default)
	 -->
	 <opserv>
	 	<!-- 
	 		[OPTIONAL] Required Level
	 		Defines the default level that users must have to access opserv
	 	 -->
	 	<requiredlevel>300</requiredlevel>
	 </opserv>
	 
	 <!-- 
		[OPTIONAL] Global
		All options in this block are optional!
		Note that these options are only usefull if you've loaded the Global-Module (Loaded by default)
	 -->
	 <global>
	 	<!-- 
	 		[OPTIONAL] Required Level
	 		Defines the default level that users must have to access global
	 	 -->
	 	<requiredlevel>600</requiredlevel>
	 </global>
</config>