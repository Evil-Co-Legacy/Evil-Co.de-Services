<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config SYSTEM "http://www.evil-co.de/irc/DTDs/config.dtd">
<config>
	<connection>
		<!-- 
			[REQUIRED]] Services name
			This will used to identify at IRCd
		 -->
		<name>test.antaresirc.de</name>
		
		<!-- 
			[REQUIRED] Hostname
			The hostname where the IRCd runs
		 -->
		<hostname>antaresirc.de</hostname>
		
		<!-- 
			[REQUIRED] Port
			The port where services should connect
		 -->
		<port>7000</port>
		
		<!-- 
			[REQUIRED] Password
			The password for link connection
		 -->
		<password>foobar</password>
		
		<!--
			[REQUIRED] Numeric
			The numeric for services
			If you don't know what this is leave it at default!
		 -->
		 <numeric>00B</numeric>
	 	 
	 	 <!-- 
	 	 	[REQUIRED] Protocol
	 	 	The protocol that should used
	 	 	Available are: inspircd
	 	 -->
	 	 <protocol>inspircd</protocol>
	 	 
	 	 <!-- 
	 	 	[REQUIRED] IP Protocol Version
	 	 	Sets the 
	 	  -->
	 	 <ipversion>4</ipversion>
	 	 
	 	 <!-- 
	 	 	[REQUIRED] Logchan
	 	 	The channel where services should announce log messages
	 	  -->
	 	 <servicechannel><![CDATA[#Services]]></servicechannel>
	</connection>
	
	<database>
		<!-- 
			[REQUIRED] Database Driver
			The driver that should used
			Available are:  MSAccess, MSSQL, MySQL, MySQLi, PostgreSQL, SQLite2
		 -->
		<driver>MySQL</driver>
		
		<!-- 
			[REQUIRED] Database Hostname
			The hostname where Database (e.g. MySQL) runs.
		 -->
		<hostname>localhost</hostname>
		
		<!-- 
			[REQUIRED) Database Username
			The username that should used for database connection (e.g. root)
		 -->
		<username>root</username>
		
		<!-- 
			[REQUIRED) Database Password
			The password of user that should used for database connection
		 -->
		<password></password>
		
		<!-- 
			[REQUIRED] Database Name
			The name of database that contains service data layout
		 -->
		<dbname>evilcode_services</dbname>
	</database>
	
	<!-- 
		[OPTIONAL] AuthServ
		All options in this block are optional!
		Note that these options are only useful if you've loaded the AuthServ-Module (Loaded by default)
	 -->
	<authserv>
		<!-- 
			[OPTIONAL] Allow Registrations
			If this is set to 1 the AuthServ Module allows account registrations
		 -->
		<enableregistration>1</enableregistration>
		
		<!-- 
			[OPTIONAL] Require Email
			If this is set to 1 AuthServ will require the E-Mail field for new accounts
			Note: This is only useful if you enable the 'enableregistration' option!
		 -->
		<requireemail>1</requireemail>
		
		<!-- 
			[OPTIONAL] Use Emails
			If this is set to 1 AuthServ will send E-Mails to users to validate Accounts
			Note: This REQUIRES the 'requireemail' option!
		 -->
		<usemail>1</usemail>
		
		<!-- 
			[OPTIONAL] Accountname Pattern
			Defines a regex for account name validation.
			If you don't know what this does leave it at default!
			Note: This will only used if the 'enableregistration' setting is set to 1
		 -->
		<usernamepattern><![CDATA[~([A-Z0-9_\-\.]+)~i]]></usernamepattern>
	</authserv>
	
	<!-- 
		[OPTIONAL] ChanServ
		All options in this block are optional!
		Note that these options are only useful if you've loaded the ChanServ-Module (Loaded by default)
	 -->
	<chanserv>
		<!-- 
			[OPTIONAL] Require Account
			If this is set to 1 ChanServ will deny all users access that aren't authed
		 -->
		<requireaccount>0</requireaccount>
		 
		 <!-- 
		 	[OPTIONAL] Required Operator Level for Channel Registrations
		 	The given integer defines the minimum operator level for channel registrations
		  -->
		  <requiredregistrationaccountlevel>0</requiredregistrationaccountlevel>
		 
		 <!-- 
		 	[OPTIONAL] Channel Name Pattern
		 	Defines a regex for channel names
		 	If you don't know what this does leave it at default!
		  -->
		 <channelnamepattern><![CDATA[~(#|&)([#&A-Z0-9_\-\.]*)~i]]></channelnamepattern>
	</chanserv>
</config>